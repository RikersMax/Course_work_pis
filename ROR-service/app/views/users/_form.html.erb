<%= form_with(model: @user, method: 'POST', url: users_path, data: { turbo: false }) do |f| %>
	<div class="form">
		<div class="form-group">
			<%= f.label(:name, value: 'your name')  %>
		</div>

		<div class="form-group">
			<%=f.text_field(:name, palaceholder: 'name', class: 'form-input')  %>
		</div>

		<div class="form-group">
			<%= f.label(:email, value: 'your email')  %>
		</div>

		<div class="form-group">
			<%=f.text_field(:email, palaceholder: 'email', class: 'form-input')  %>
		</div>

		<div class="form-group">
			<%= f.label(:password)  %>
		</div>

		<div class="form-group">
			<%= f.password_field(:password, class: 'form-input')  %>
		</div>

		<div class="form-group">
			<%= f.label(:password_confirmation)  %>
		</div>

		<div class="form-group">
			<%= f.password_field(:password_confirmation, class: 'form-input')  %>
		</div>

		<div class="form-group">			
			<%= f.submit('sign_up', class: "btn")  %>
		</div>
	</div>
<% end %>